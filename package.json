{
  "name": "@cmdcode/nostr-connect",
  "version": "0.0.1",
  "description": "Client and session manager for nostr connect.",
  "author": "Christopher Scott",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cmdcode/nostr-connect"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "files": [
    "README.md",
    "LICENSE",
    "dist",
    "src"
  ],
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./lib": {
      "import": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts",
      "default": "./dist/lib/index.js"
    },
    "./util": {
      "import": "./dist/util/index.js",
      "types": "./dist/util/index.d.ts",
      "default": "./dist/util/index.js"
    }
  },
  "scripts": {
    "build": "./scripts/build.sh",
    "demo:build": "cd demo && npm run build",
    "demo:dev": "cd demo && npm run dev",
    "loader": "tsx --tsconfig ./test/tsconfig.json",
    "relay": "tsx test/script/relay.ts",
    "release": "npm test | faucet && npm run build",
    "scratch": "tsx test/scratch.ts",
    "test": "tsx test/tape.ts",
    "test:client": "tsx test/script/client.ts",
    "test:signer": "tsx test/script/signer.ts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.10.5",
    "@types/tape": "^5.8.1",
    "@types/ws": "^8.5.14",
    "faucet": "^0.0.4",
    "rollup": "^4.34.0",
    "tape": "^5.9.0",
    "tslib": "^2.8.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "ws": "^8.18.0"
  },
  "dependencies": {
    "@cmdcode/buff": "^2.2.5",
    "nostr-tools": "^2.10.4",
    "zod": "^3.24.1"
  }
}
